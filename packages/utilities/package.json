{
  "name": "@hyperdemo/utilities",
  "description": "Utilities for TypeScript projects",
  "version": "1.0.3",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**"
  ],
  "engines": {
    "node": ">=20.x"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "@jest/globals": "29.7.0",
    "@stylistic/eslint-plugin": "5.6.1",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "jest": "29.7.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.51.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "bundle:clear": "rimraf build",
    "bundle:compile": "npm run bundle:clear && nest build -p tsconfig.build.json",
    "dev:check": "tsc --noEmit --project tsconfig.build.json",
    "dev:format": "npm run dev:lint -- --fix",
    "dev:lint": "eslint ./source --ext .ts",
    "dev:watch": "tsc --project tsconfig.json --watch --noEmit"
  }
}
