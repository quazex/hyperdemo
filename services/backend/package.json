{
  "name": "@hyperdemo/backend",
  "description": "Service for clients requests",
  "version": "0.0.0",
  "author": "Alexander Smirnov",
  "dependencies": {
    "@clerk/backend": "2.0.0",
    "@clerk/types": "4.60.1",
    "@fastify/static": "8.2.0",
    "@hyperdemo/decorators": "*",
    "@nestjs/common": "11.1.3",
    "@nestjs/core": "11.1.3",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-fastify": "11.1.3",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/typeorm": "11.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "env-var": "7.5.0",
    "dotenv": "17.2.3",
    "fastify": "5.4.0",
    "luxon": "3.7.1",
    "nest-commander": "3.17.0",
    "passport": "0.7.0",
    "passport-custom": "1.1.1",
    "pg": "8.16.2",
    "rxjs": "7.8.1",
    "swagger": "0.7.5",
    "typeorm": "0.3.24"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "@jest/globals": "29.7.0",
    "@nestjs/testing": "11.1.3",
    "@stylistic/eslint-plugin": "5.6.1",
    "@testcontainers/postgresql": "11.0.3",
    "@types/luxon": "3.6.2",
    "@types/pg": "8.15.4",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-import": "2.32.0",
    "jest": "29.7.0",
    "testcontainers": "11.0.3",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.51.0"
  },
  "private": true,
  "scripts": {
    "bundle:clear": "rimraf build",
    "bundle:compile": "npm run bundle:clear && nest build -p tsconfig.build.json",
    "bundle:run": "node build/main.js",
    "dev:check": "tsc --noEmit --project tsconfig.build.json",
    "dev:format": "npm run dev:lint -- --fix",
    "dev:lint": "eslint",
    "dev:live": "nest start --watch -p ./tsconfig.json",
    "dev:upgrade": "npm install $(npm outdated | cut -d' ' -f 1 | sed '1d' | xargs -I '$' echo '$@latest' | xargs echo)",
    "dev:watch": "tsc --project tsconfig.json --watch --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./source/models/migrations/migration -d ./source/config/orm.config.ts --pretty=true",
    "test:e2e": "jest --config jest.e2e.json",
    "test:unit": "jest --config jest.unit.json"
  }
}
