{
    "name": "@hyperdemo/backend",
    "description": "Service for clients requests",
    "version": "0.0.0",
    "author": "Alexander Smirnov",
    "dependencies": {
        "@clerk/backend": "2.0.0",
        "@clerk/types": "4.60.1",
        "@fastify/static": "8.2.0",
        "@hyperdemo/clerk": "0.0.1",
        "@hyperdemo/environment": "0.0.1",
        "@hyperdemo/exceptions": "0.0.1",
        "@hyperdemo/logging": "0.0.1",
        "@hyperdemo/validators": "0.0.1",
        "@nestjs/common": "11.1.3",
        "@nestjs/core": "11.1.3",
        "@nestjs/passport": "11.0.5",
        "@nestjs/platform-fastify": "11.1.3",
        "@nestjs/swagger": "11.2.0",
        "@nestjs/terminus": "11.0.0",
        "@nestjs/typeorm": "11.0.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "fastify": "5.3.3",
        "luxon": "3.6.1",
        "nest-commander": "3.17.0",
        "passport": "0.7.0",
        "passport-custom": "1.1.1",
        "pg": "8.16.0",
        "rxjs": "7.8.1",
        "swagger": "0.7.5",
        "typeorm": "0.3.24"
    },
    "devDependencies": {
        "@faker-js/faker": "9.6.0",
        "@jest/globals": "29.7.0",
        "@nestjs/testing": "11.1.3",
        "@quazex/eslint-config": "1.0.2",
        "@testcontainers/postgresql": "11.0.3",
        "@types/luxon": "3.6.2",
        "@types/pg": "8.15.4",
        "jest": "29.7.0",
        "rimraf": "6.0.1",
        "testcontainers": "11.0.3",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "type-fest": "4.41.0",
        "typescript": "5.8.3"
    },
    "private": true,
    "scripts": {
        "bundle:clear": "rimraf build",
        "bundle:compile": "npm run bundle:clear && nest build -p tsconfig.build.json",
        "bundle:run": "node build/main.js",
        "dev:check": "tsc --noEmit --project tsconfig.build.json",
        "dev:format": "npm run dev:lint -- --fix",
        "dev:lint": "eslint ./source --ext .ts",
        "dev:live": "nest start --watch -p ./tsconfig.build.json",
        "dev:upgrade": "npm install $(npm outdated | cut -d' ' -f 1 | sed '1d' | xargs -I '$' echo '$@latest' | xargs echo)",
        "dev:vscode": "node ./.scripts/vscode.js",
        "dev:watch": "tsc --project tsconfig.json --watch --noEmit",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate ./source/models/migrations/migration -d orm-config.ts --pretty=true",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d orm-config.ts",
        "test:e2e": "jest --config jest.e2e.json",
        "test:unit": "jest --config jest.unit.json"
    }
}
