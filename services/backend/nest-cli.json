{
    "collection": "@nestjs/schematics",
    "sourceRoot": "source",
    "entryFile": "main",
    "compilerOptions": {
        "plugins": [{
            "name": "@nestjs/swagger",
            "options": {
                "introspectComments": true,
                "dtoFileNameSuffix": [
                    ".body.ts",
                    ".dto.ts",
                    ".query.ts",
                    ".params.ts",
                    ".request.ts"
                ]
            }
        }]
    }
}
