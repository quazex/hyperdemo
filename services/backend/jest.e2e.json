{
    "maxWorkers": 1,
    "testTimeout": 120000,
    "moduleFileExtensions": ["ts", "js"],
    "testMatch": [
        "<rootDir>/**/e2e.spec.ts"
    ],
    "transform": {
        "^.+\\.ts$": ["ts-jest", {
            "tsconfig": "<rootDir>/tsconfig.build.json"
        }]
    },
    "roots": [
        "source"
    ],
    "moduleNameMapper": {
        "@config": "<rootDir>/source/config",
        "@domain/(.*)": "<rootDir>/source/domain/$1",
        "@auth": "<rootDir>/source/shared/auth",
        "@validators": "<rootDir>/source/shared/validators",
        "@testing": "<rootDir>/source/shared/testing"
    },
    "globalSetup": "<rootDir>/source/shared/testing/global.setup.ts",
    "globalTeardown": "<rootDir>/source/shared/testing/global.teardown.ts",
    "verbose": true
}
