{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",

    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": false,
    "incremental": false,

    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
